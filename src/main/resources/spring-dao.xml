<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- 配置数据访问层 -->

  <!-- 1. 读取property文件变量 -->
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="locations">
      <array>
        <value>classpath:db.properties</value>
      </array>
    </property>
  </bean>

  <!-- 2. 配置数据库连接池 -->
  <bean id="dataSource" class="${dataSource}">
    <property name="driverClassName" value="${driverClassName}"/>
    <property name="url" value="${url}"/>
    <property name="username" value="${username}"/>
    <property name="password" value="${password}"/>
  </bean>

  <!-- 3. 配置SessionFactory对象 -->
  <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
    <!-- 注入数据库连接池 -->
    <property name="dataSource" ref="dataSource"/>
    <!-- 配置MyBatis全局配置文件 -->
    <!--<property name="configLocation" value="classpath:mybatis-config.xml" />-->
    <!-- 扫描entity包，使用别名: com.github.woodylic.utdemo.SmsTask -> SmsTask -->
    <!--<property name="typeAliasesPackage" value="com.github.woodylic.utdemo.entity" />-->
    <!-- 扫描mapper需要的xml文件 -->
    <property name="mapperLocations" value="classpath:mapper/*Mapper.xml" />
  </bean>

  <!-- 4. 配置扫描Dao接口包，动态实现Dao接口，并注入Spring容器 -->
  <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
    <!-- 注入sqlSessionFactory -->
    <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"/>
    <!-- 配置需要扫描的Dao接口包 -->
    <property name="basePackage" value="com.github.woodylic.utdemo.dao"/>
  </bean>

</beans>